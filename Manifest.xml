<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides" 
           xsi:type="MailApp">
	<Id>1bbfdb38-0321-4d48-a8b7-bbc47a91a748</Id>
	<Version>1.0.0.0</Version>
	<ProviderName>EL</ProviderName>
	<DefaultLocale>en-US</DefaultLocale>
	<DisplayName DefaultValue="Mail Content"/>

	<Description DefaultValue="This add-in show the selected mail content"/>
	<IconUrl DefaultValue="https://mangeet02.github.io/Dialog-Window-API-Mail-Content/images/icon.png"/>
	<HighResolutionIconUrl DefaultValue="https://mangeet02.github.io/Dialog-Window-API-Mail-Content/images/icon.png" />
	<Hosts>
		<Host Name="Mailbox"/>
	</Hosts>
	<Requirements>
		<Sets>
			<Set Name="MailBox" MinVersion="1.1"/>
		</Sets>
	</Requirements>
    <FormSettings>
        <Form xsi:type="ItemRead">
            <DesktopSettings>
            <SourceLocation DefaultValue="https://mangeet02.github.io/Dialog-Window-API-Mail-Content/index.html"/>
            <RequestedHeight>200</RequestedHeight>
            </DesktopSettings>
        </Form>
    </FormSettings>
	<Permissions>ReadWriteMailbox</Permissions>
	<Rule xsi:type="RuleCollection" Mode="Or">
		<Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
	</Rule>
	<DisableEntityHighlighting>false</DisableEntityHighlighting>
	<VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
		<Requirements>
			<bt:Sets DefaultMinVersion="1.3">
				<bt:Set Name="Mailbox"/>
			</bt:Sets>
		</Requirements>
		<Hosts>
			<Host xsi:type="MailHost">
				<DesktopFormFactor>
					<FunctionFile resid="functionFile"/>
					<ExtensionPoint xsi:type="MessageReadCommandSurface">
						<OfficeTab id="TabDefault">
							<Group id="msgReadGroup">
								<Label resid="groupLabel"/>
								<Control xsi:type="Button" id="msgReadFunctionButton">
									<Label resid="funcReadButtonLabel"/>
									<Supertip>
										<Title resid="funcReadSuperTipTitle"/>
										<Description resid="funcReadSuperTipDescription"/>
									</Supertip>
									<Icon>
										<bt:Image size="16" resid="icon-16"/>
										<bt:Image size="32" resid="icon-32"/>
										<bt:Image size="80" resid="icon-80"/>
									</Icon>
									<Action xsi:type="ExecuteFunction">
										<FunctionName>main</FunctionName>
									</Action>
								</Control>
							</Group>
						</OfficeTab>
					</ExtensionPoint>
				</DesktopFormFactor>
			</Host>
		</Hosts>
		<Resources>
			<bt:Images>
				<bt:Image id="icon-16" DefaultValue="https://mangeet02.github.io/Dialog-Window-API-Mail-Content/images/icon.png" />
				<bt:Image id="icon-32" DefaultValue="https://mangeet02.github.io/Dialog-Window-API-Mail-Content/images/icon.png"/>
				<bt:Image id="icon-80" DefaultValue="https://mangeet02.github.io/Dialog-Window-API-Mail-Content/images/icon.png" />
			</bt:Images>
			<bt:Urls>
			    <bt:Url id="functionFile" DefaultValue="https://mangeet02.github.io/Dialog-Window-API-Mail-Content/index.html"/>
			</bt:Urls>
				<bt:ShortStrings>
					<bt:String id="groupLabel" DefaultValue="Bug Demo"/>
					<bt:String id="funcReadButtonLabel" DefaultValue="Bug Demo">
					</bt:String>
					<bt:String id="funcReadSuperTipTitle" DefaultValue="Bug Demo"/>
				</bt:ShortStrings>
				<bt:LongStrings>
					<bt:String id="funcReadSuperTipDescription" DefaultValue="Bug Demo"/>
				</bt:LongStrings>
		</Resources>
		<VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
			<Requirements>
				<bt:Sets DefaultMinVersion="1.5">
					<bt:Set Name="Mailbox"/>
				</bt:Sets>
			</Requirements>
			<Hosts>
				<Host xsi:type="MailHost">
					<DesktopFormFactor>
                        <SupportsSharedFolders>true</SupportsSharedFolders>
						<FunctionFile resid="functionFile"/>
						<ExtensionPoint xsi:type="MessageReadCommandSurface">
							<OfficeTab id="TabDefault">
								<Group id="msgReadGroupBugDemo">
									<Label resid="groupLabel"/>
									<Control xsi:type="Button" id="msgReadFunctionButton">
										<Label resid="funcReadButtonLabel"/>
										<Supertip>
											<Title resid="funcReadSuperTipTitle"/>
											<Description resid="funcReadSuperTipDescription"/>
										</Supertip>
										<Icon>
											<bt:Image size="16" resid="icon-16"/>
											<bt:Image size="32" resid="icon-32"/>
											<bt:Image size="80" resid="icon-80"/>
										</Icon>
										<Action xsi:type="ExecuteFunction">
											<FunctionName>main</FunctionName>
										</Action>
									</Control>
								</Group>
							</OfficeTab>
						</ExtensionPoint>
					</DesktopFormFactor>
				</Host>
			</Hosts>
			<Resources>
				<bt:Images>
					<bt:Image id="icon-16" DefaultValue="https://mangeet02.github.io/Dialog-Window-API-Mail-Content/images/icon.png" />
				    <bt:Image id="icon-32" DefaultValue="https://mangeet02.github.io/Dialog-Window-API-Mail-Content/images/icon.png"/>
				    <bt:Image id="icon-80" DefaultValue="https://mangeet02.github.io/Dialog-Window-API-Mail-Content/images/icon.png"/>
				</bt:Images>
				<bt:Urls>
				    <bt:Url id="functionFile" DefaultValue="https://mangeet02.github.io/Dialog-Window-API-Mail-Content/index.html"/>
				</bt:Urls>
				<bt:ShortStrings>
					<bt:String id="groupLabel" DefaultValue="Mail Content"/>
					<bt:String id="funcReadButtonLabel" DefaultValue="Mail Content">
					</bt:String>
					<bt:String id="funcReadSuperTipTitle" DefaultValue="Mail Content"/>
				</bt:ShortStrings>
				<bt:LongStrings>
					<bt:String id="funcReadSuperTipDescription" DefaultValue="Mail Content"/>
				</bt:LongStrings>
			</Resources>
		</VersionOverrides>
	</VersionOverrides>
</OfficeApp>
